<h1>Posts</h1>

<form class="d-flex">
  <input name="q" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
  <button class="btn btn-outline-success" type="submit" action="/index">Search</button>
</form>
<br>
<%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>

<br><br>

<% @posts.each do |post| %>
  <div class="card border-dark mb-3">
  <div class="card-header"><h1><%= post.title %></h1></div>
  <div class="card-body text-dark">
    <h4>Made by User ID: <%= post.user_id %> || Posted on: <%= post.updated_at %></h4>
    <h5></h5>
    <p><%= post.content %></p>

    <%= link_to 'Show', post, class:"btn btn-secondary" %>
    <% if current_user.id == post.user_id %>
    <%= link_to 'Edit', edit_post_path(post), class:"btn btn-secondary" %>
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
    <% end %>
  </div>
  </div>

<% end %>
<%= paginate @posts %>